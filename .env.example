# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
NODE_ENV=development

# ==============================================
# WHATSAPP CLOUD API (Meta)
# ==============================================
# Get these from: https://developers.facebook.com/apps
WHATSAPP_API_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_VERIFY_TOKEN=your_random_verify_token_12345

# ==============================================
# GOOGLE GEMINI AI
# ==============================================
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uew_bot
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# ==============================================
# REDIS CACHE
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# PINECONE VECTOR DATABASE
# ==============================================
# Get from: https://www.pinecone.io
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=uew-knowledge

# ==============================================
# CREDIT SYSTEM CONFIGURATION
# ==============================================
INITIAL_CREDITS=5
CREDITS_PER_QUERY=1
CREDITS_PER_FEEDBACK=3
MIN_FEEDBACK_LENGTH=10
MAX_CREDITS_PER_DAY=20

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=20

# ==============================================
# WEBSITE SCRAPING
# ==============================================
UEW_WEBSITE_URL=https://www.uew.edu.gh
SCRAPE_INTERVAL_HOURS=24

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
